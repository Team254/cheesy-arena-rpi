if [[ $# -eq 0 ]] ; then
    echo 'Must specify IP address.'
    exit 0
fi

ssh-copy-id pi@$1

ssh pi@$1 "echo 'pi:1234Five' | sudo chpasswd && sudo apt-get install unclutter"

scp Local\ State pi@$1:/home/pi/.config/chromium/
scp autostart pi@$1:/home/pi/.config/lxsession/LXDE-pi/
scp config.txt pi@$1:/home/pi/
scp wpa_supplicant.conf pi@$1:/home/pi/

ssh pi@$1 "sudo cp config.txt /boot/ && sudo cp wpa_supplicant.conf /etc/wpa_supplicant/"

scp cheesy-arena-rpi pi@$1:/home/pi/
ssh pi@$1 "sudo cp cheesy-arena-rpi /usr/local/bin/"
